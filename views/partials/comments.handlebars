<div class="comments">
  {{#each this}}
  <div class="container">
    <div class="row comment {{comment_opinion}}">
      <div class="col-md-9 text">
        {{comment_text}}
      </div>
      <div class="col-md-3 meta">
          <div>{{user.username}}</div>
          <div>{{format_date created_at}}</div>
          <div>{{comment_opinion}}</div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
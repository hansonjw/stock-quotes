
<article class="thesis-group">
  <div class="chart">
    <a href="/security/{{security.ticker}}">{{security.ticker}}</a>
    <div>{{security.name}}</div>
    <img class="image" src="/dummy.png">
  </div>

  {{#if loggedIn}}
    <section class="new-thesis">
      <h2>New Investment Thesis</h2>

      <form>
        <div>
          <label for="thesis-title">Title</label>
          <input type="text" id="thesis-title" name="thesis-title" />
        </div>
        <div>
          <label for="thesis-contents">Investment idea...</label>
          <textarea id="thesis-contents" name="thesis-contents" /></textarea>
        </div>
        <button type="submit">Create</button>
      </form>
    </section>
  {{/if}}

  {{> thesis security.theses}}

</article>



<script src="/javascript/newthesis.js"></script>